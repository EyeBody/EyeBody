<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionOverflowButtonStyle">@style/actionbar_image</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

        <item name="colorPrimary">@color/transparentBlack30</item>
        <item name="colorPrimaryDark">@color/transparentBlack40</item>
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="actionbar_image" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:src">@drawable/imagebutton_setting</item>
    </style>

</resources>
