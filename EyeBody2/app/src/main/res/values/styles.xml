<resources>

    <!-- 앱 전체 테마 -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="actionBarStyle">@style/EyeBodyActionBar</item>
        <item name="android:windowBackground">@color/eyebodyBackground</item>

        <item name="colorControlActivated">@color/eyebodyMiddle</item>
    </style>

    <style name="EyeBodyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/transparent</item>
    </style>


    <!-- 특정 컴포넌트 테마 -->
    <style name="NoTitle" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.disable_actionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
