<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ImageView_Init2_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="배경"
        app:srcCompat="@drawable/imagebutton_setting"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/EditText_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:labelFor="@+id/EditText_input_password"
            android:padding="20dp" />

        <Button
            android:id="@+id/Button_submit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="20dp"
            android:text="확인"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</FrameLayout>