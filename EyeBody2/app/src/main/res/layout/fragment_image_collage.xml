<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.eyebody.gallery.ImageCollageFragment">

    <Button
        android:id="@+id/makeGifButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="make gif"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/horizentalMakeCollageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가로로 콜라주" />

        <Button
            android:id="@+id/verticalMakeCollageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세로로 콜라주" />

        <Button
            android:id="@+id/twoMakeCollageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2개" />

        <Button
            android:id="@+id/threeMakeCollageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3개" />
    </LinearLayout>

    <ImageView
        android:id="@+id/sampleImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff00"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

</LinearLayout>
